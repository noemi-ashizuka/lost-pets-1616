<%= form_with model: @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control" %>
  <%= f.label :species %>
  <%= f.select :species, Pet::SPECIES, class: "form-select" %>
  <%= f.label :found_on %>
  <%= f.date_field :found_on, class: "form-control" %>
  <%= f.submit class: "btn btn-primary mt-2" %>
<% end %>
