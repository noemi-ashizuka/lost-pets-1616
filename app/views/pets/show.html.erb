<div class="container">
  <h1><%= @pet.name  %></h1>
  <p><%= @pet.species %></p>
  <p><%= @pet.address %></p>
  <p><%= @pet.found_on.strftime("%B %d %Y") %></p>

  <%= link_to 'X', pet_path(@pet), data: { turbo_method: :delete, turbo_confirm: "Was #{@pet.name} returned to the owner?"} %>

  <%= link_to 'Back', pets_path %>
</div>
